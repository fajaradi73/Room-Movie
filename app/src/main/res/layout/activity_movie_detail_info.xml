<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    android:padding="@dimen/padding_10"
    android:layout_marginTop="@dimen/itemBetweenMarginMedium"
    tools:ignore="ContentDescription">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/itemBetweenMarginMedium">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clSosmed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <ImageView
                android:layout_width="@dimen/height_icon"
                android:layout_height="@dimen/height_icon"
                android:id="@+id/facebook"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_facebook"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/twitter"/>
            <ImageView
                android:layout_width="@dimen/height_icon"
                android:layout_height="@dimen/height_icon"
                android:id="@+id/twitter"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_twitter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/facebook"
                app:layout_constraintRight_toLeftOf="@id/instagram"/>
            <ImageView
                android:layout_width="@dimen/height_icon"
                android:layout_height="@dimen/height_icon"
                android:id="@+id/instagram"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_instagram"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/twitter"
                app:layout_constraintRight_toLeftOf="@id/link"/>
            <ImageView
                android:layout_width="@dimen/height_icon"
                android:layout_height="@dimen/height_icon"
                android:id="@+id/link"
                android:layout_margin="@dimen/padding_10"
                android:src="@drawable/ic_link"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/instagram"
                app:layout_constraintRight_toRightOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clStatus"
            app:layout_constraintTop_toBottomOf="@id/clSosmed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:text="@string/status"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatus"
                tools:text="@string/status"
                android:textSize="16sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="@dimen/itemBetweenMarginMedium"
                android:layout_marginEnd="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toBottomOf="@id/status"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clLanguage"
            app:layout_constraintTop_toBottomOf="@id/clStatus"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/language"
                android:text="@string/original_language"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvLanguage"
                tools:text="Indonesia"
                android:textSize="16sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="@dimen/itemBetweenMarginMedium"
                android:layout_marginEnd="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toBottomOf="@id/language"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clBudget"
            app:layout_constraintTop_toBottomOf="@id/clLanguage"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/budget"
                android:text="@string/budget"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvBudget"
                tools:text="@string/status"
                android:textSize="16sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="@dimen/itemBetweenMarginMedium"
                android:layout_marginEnd="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toBottomOf="@id/budget"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clRevenue"
            app:layout_constraintTop_toBottomOf="@id/clBudget"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/revenue"
                android:text="@string/revenue"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvRevenue"
                tools:text="@string/status"
                android:textSize="16sp"
                android:textColor="@color/textColorSecondary"
                android:layout_marginStart="@dimen/itemBetweenMarginMedium"
                android:layout_marginEnd="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toBottomOf="@id/revenue"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clKeyword"
            app:layout_constraintTop_toBottomOf="@id/clRevenue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keyword"
                android:text="@string/keyword"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cgKeyword"
                style="@style/CustomChipChoice"
                android:layout_marginStart="@dimen/itemBetweenMarginMedium"
                android:layout_marginEnd="@dimen/itemBetweenMarginMedium"
                app:chipSpacingHorizontal="@dimen/itemBetweenMarginMedium"
                app:chipSpacingVertical="1dp"
                app:layout_constraintTop_toBottomOf="@id/keyword"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </com.google.android.material.chip.ChipGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>