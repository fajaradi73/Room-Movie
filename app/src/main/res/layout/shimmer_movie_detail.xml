<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fitsSystemWindows="true"
        android:background="@color/shimmerBG"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:padding="@dimen/padding_10"
        tools:ignore="ContentDescription">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/itemBetweenMarginMedium">
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/itemBetweenMarginMedium">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/shimmerBG" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_shimmer"
                    android:layout_marginStart="@dimen/itemBetweenMarginMedium" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:padding="@dimen/padding_10"
        android:layout_marginTop="@dimen/itemBetweenMarginMedium"
        tools:ignore="ContentDescription">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/itemBetweenMarginMedium">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/clSosmed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <ImageView
                    android:layout_width="@dimen/height_icon"
                    android:layout_height="@dimen/height_icon"
                    android:id="@+id/ivFacebook"
                    android:layout_margin="@dimen/padding_10"
                    android:src="@drawable/shape_shimmer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/ivTwitter"/>
                <ImageView
                    android:layout_width="@dimen/height_icon"
                    android:layout_height="@dimen/height_icon"
                    android:id="@+id/ivTwitter"
                    android:layout_margin="@dimen/padding_10"
                    android:src="@drawable/shape_shimmer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivFacebook"
                    app:layout_constraintRight_toLeftOf="@id/ivInstagram"/>
                <ImageView
                    android:layout_width="@dimen/height_icon"
                    android:layout_height="@dimen/height_icon"
                    android:id="@+id/ivInstagram"
                    android:layout_margin="@dimen/padding_10"
                    android:src="@drawable/shape_shimmer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivTwitter"
                    app:layout_constraintRight_toLeftOf="@id/ivLink"/>
                <ImageView
                    android:layout_width="@dimen/height_icon"
                    android:layout_height="@dimen/height_icon"
                    android:id="@+id/ivLink"
                    android:layout_margin="@dimen/padding_10"
                    android:src="@drawable/shape_shimmer"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ivInstagram"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/shape_shimmer"
                android:layout_margin="@dimen/itemBetweenMarginMedium"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>