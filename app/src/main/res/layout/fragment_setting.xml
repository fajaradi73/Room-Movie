<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.setting.SettingFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cvNightMode"
            style="@style/ButtonClick"
            app:cardBackgroundColor="@color/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/night_mode"
                    android:id="@+id/tvNightMode"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/itemBetweenMarginMedium"
                    android:paddingTop="@dimen/itemBetweenMarginMedium"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/switchMode"/>
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/switchMode"
                    android:checked="false"
                    android:theme="@style/SwitchTheme"
                    android:padding="@dimen/itemBetweenMarginMedium"
                    app:layout_constraintLeft_toRightOf="@id/tvNightMode"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cvCache"
            style="@style/ButtonClick"
            app:cardBackgroundColor="@color/background"
            app:layout_constraintTop_toBottomOf="@id/cvNightMode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/clear_cache"
                    android:id="@+id/tvCache"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/itemBetweenMarginMedium"
                    android:paddingTop="@dimen/itemBetweenMarginMedium"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/tvSize"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvSize"
                    tools:text="35 MB"
                    android:textColor="@color/textColorSecondary"
                    android:padding="@dimen/itemBetweenMarginMedium"
                    app:layout_constraintLeft_toRightOf="@id/tvCache"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cvTermsOfUse"
            style="@style/ButtonClick"
            app:cardBackgroundColor="@color/background"
            app:layout_constraintTop_toBottomOf="@id/cvCache"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/itemBetweenMarginMedium"
                    android:paddingTop="@dimen/itemBetweenMarginMedium"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cvPrivacyPolicy"
            style="@style/ButtonClick"
            app:cardBackgroundColor="@color/background"
            app:layout_constraintTop_toBottomOf="@id/cvTermsOfUse"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/itemBetweenMarginMedium"
                    android:paddingTop="@dimen/itemBetweenMarginMedium"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/cvContribution"
            style="@style/ButtonClick"
            app:cardBackgroundColor="@color/background"
            app:layout_constraintTop_toBottomOf="@id/cvPrivacyPolicy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/contribution"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/itemBetweenMarginMedium"
                    android:paddingTop="@dimen/itemBetweenMarginMedium"
                    android:paddingLeft="@dimen/padding_20"
                    android:paddingRight="@dimen/padding_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Version 3.2"
            android:layout_margin="@dimen/itemBetweenMargin"
            android:padding="@dimen/itemBetweenMarginMedium"
            android:textSize="14sp"
            android:textColor="@color/textColorPrimary"
            android:id="@+id/tvVersion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/ivTmdb"
            android:src="@drawable/ic_tmdb"
            android:layout_margin="@dimen/itemBetweenMarginMedium"
            app:layout_constraintBottom_toTopOf="@id/tvVersion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>