<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
        <item name="titleTextColor">@color/textColorPrimary</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
        <item name="titleTextColor">@color/colorBlack</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
        <item name="titleTextColor">@color/colorBlack</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    <style name="AppTheme.DarkStatusBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
        <item name="titleTextColor">@color/colorBlack</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="colorPrimaryDark" tools:targetApi="23">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="customProgress" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/colorPrimary</item>
    </style>

    <style name="ButtonClick" parent="Widget.AppCompat.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">@color/colorPrimary</item>
        <item name="floatingSearch_dimBackground">false</item>
        <item name="floatingSearch_viewSearchInputTextColor">@color/textColorPrimary</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/textColorPrimary</item>
        <item name="floatingSearch_hintTextColor">@color/grey_600</item>
        <item name="floatingSearch_dividerColor">@color/colorPrimary</item>
        <item name="floatingSearch_clearBtnColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_leftActionColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_menuItemIconColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/iconColorPrimary</item>
    </style>
    <style name="SearchViewWhite">
        <item name="floatingSearch_backgroundColor">@color/backgroundSearch</item>
        <item name="floatingSearch_dimBackground">false</item>
        <item name="floatingSearch_viewSearchInputTextColor">@color/textColorPrimary</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">@color/textColorPrimary</item>
        <item name="floatingSearch_hintTextColor">@color/grey_600</item>
        <item name="floatingSearch_dividerColor">@color/backgroundSearch</item>
        <item name="floatingSearch_clearBtnColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_leftActionColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_menu">@menu/search_menu</item>
        <item name="floatingSearch_menuItemIconColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_suggestionRightIconColor">@color/iconColorPrimary</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/iconColorPrimary</item>
    </style>
    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/grey_600</item>
        <item name="android:fontFamily">@font/palatino_linotype</item>
    </style>

    <style name="ChipText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="child">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="toolbar.title" parent="parent">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">14dp</item>
    </style>
    <style name="SwitchTheme" >
        <item name="colorControlActivated">@color/colorSwitchActivated</item>
        <item name="colorSwitchThumbNormal">#414141</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="SpinnerTheme" parent="Material.Widget.Spinner">
        <item name="spn_labelEnable">false</item>
        <item name="spn_labelPadding">0dp</item>
        <item name="spn_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="spn_labelTextColor">@color/textColorPrimary</item>
        <item name="spn_labelEllipsize">end</item>
        <item name="spn_dividerColor">@color/iconColorPrimary</item>
        <item name="spn_dividerHeight">0dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowColor">@color/iconColorPrimary</item>
        <item name="spn_arrowSize">@dimen/itemBetweenMarginMedium</item>
        <item name="spn_arrowPadding">@dimen/activityVerticalMargin</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimClockwise">true</item>
        <item name="spn_arrowAnimDuration">300</item>
<!--        <item name="rd_style">@style/Material.Drawable.Ripple.Wave</item>-->
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:layout_height">@dimen/height_icon</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/activityVerticalMargin</item>
    </style>
    <style name="SpinnerThemeNoBackground" parent="Material.Widget.Spinner">
        <item name="spn_labelEnable">false</item>
        <item name="spn_labelPadding">0dp</item>
        <item name="spn_labelTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="spn_labelTextColor">@color/textColorPrimary</item>
        <item name="spn_labelEllipsize">end</item>
        <item name="spn_dividerColor">@color/iconColorPrimary</item>
        <item name="spn_dividerHeight">0dp</item>
        <item name="spn_dividerPadding">0dp</item>
        <item name="spn_dividerAnimDuration">@android:integer/config_shortAnimTime</item>
        <item name="spn_arrowColor">@color/iconColorPrimary</item>
        <item name="spn_arrowSize">@dimen/itemBetweenMarginMedium</item>
        <item name="spn_arrowPadding">@dimen/activityVerticalMargin</item>
        <item name="spn_arrowSwitchMode">true</item>
        <item name="spn_arrowAnimClockwise">true</item>
        <item name="spn_arrowAnimDuration">300</item>
        <!--        <item name="rd_style">@style/Material.Drawable.Ripple.Wave</item>-->
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>